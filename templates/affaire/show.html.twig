{% extends 'base.html.twig' %}

{% block title %}Affaire{% endblock %}

{% block body %}
    <h1>Affaire</h1>

<div class="col-md-4">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ affaire.id }}</td>
            </tr>
            <tr>
                <th>Designation</th>
                <td>{{ affaire.designation }}</td>
                
            </tr>
            <tr>
                <th>Politiciens</th>
                <td>
                    {% for politicien in affaire.politiciens  %}
                        {{ politicien.nom }} -
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Actions</th>
                <td>
                    <div class="row">
                        <div class="col">
                            <a class="btn btn-primary mr-4" href="{{ path('affaire_edit', {'id': affaire.id}) }}">editer</a>
                        </div>
                        <div class="col">
                            {{ include('affaire/_delete_form.html.twig') }}
                        </div>
                    </div>
                </td>
            </tr>
            
        </tbody>
    </table>
</div>

    <a class="btn btn-light" href="{{ path('affaire_index') }}">retour a la liste</a>

    
{% endblock %}
